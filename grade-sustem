#include <iostream>
using namespace std;

int main() {
    
char middle_initial;
string first_name;
string last_name;
int age;
float gradeMath, gradeScience, gradeEnglish, gradeFilipino, gradeAP;

cout << "Enter your first name: ";
cin >> first_name;
  
cout << "Enter your middle initial: ";
cin >> middle_initial;
  
cout << "Enter your last name: ";
cin >> last_name ;
  
cout << "Enter your age: "; 
cin >> age;
  
cout << "What is your grade in Mathematics? ";
cin >> gradeMath;
  
cout << "What is your grade in Science? ";
cin >> gradeScience;

cout << "What is your grade in English? ";
cin >> gradeEnglish;

cout << "What is your grade in Araling Panlipunan? ";
cin >> gradeAP;

cout << "What is your grade in Filipino? ";
cin >> gradeFilipino;

/*  float totalGrade = (gradeMath * 0.20) 
  + (gradeScience * 0.20) + (gradeFilipino * 0.20) + (gradeEnglish * 0.20) + (gradeAP * 0.20);  */
  float average = (gradeMath + gradeScience + gradeFilipino + gradeEnglish + gradeAP)/5;
  
cout << "Welcome to C++ Programming!" << endl <<
first_name << " " << middle_initial << " " << last_name << " !" << endl;
